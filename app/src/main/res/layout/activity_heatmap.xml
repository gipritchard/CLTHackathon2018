<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mapfragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/low_accessibility"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding"
        android:src="@drawable/ic_filter_list"
        android:onClick="showFilterMenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/high_accessibility"
        />

    <TextView
        android:id="@+id/low_accessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Accessibility"
        android:padding="@dimen/legend_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/mapfragment"
        app:layout_constraintBottom_toTopOf="@id/legendTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/accessibility_gradient"/>

    <ImageView
        android:id="@+id/accessibility_gradient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gradient_alt"
        app:layout_constraintTop_toBottomOf="@id/mapfragment"
        app:layout_constraintLeft_toRightOf="@+id/low_accessibility"
        app:layout_constraintBottom_toTopOf="@id/legendTitle"
        app:layout_constraintRight_toLeftOf="@+id/high_accessibility"
        />

    <TextView
        android:id="@+id/high_accessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Accessibility"
        android:padding="@dimen/legend_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/mapfragment"
        app:layout_constraintBottom_toTopOf="@id/legendTitle"
        app:layout_constraintLeft_toRightOf="@id/accessibility_gradient"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/legendTitle"
        android:text="Low Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintTop_toBottomOf="@+id/high_accessibility"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/legend_padding"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gradient"
        app:layout_constraintTop_toTopOf="@+id/legendTitle"
        app:layout_constraintLeft_toRightOf="@+id/legendTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/highcost"
        />

    <TextView
        android:id="@+id/highcost"
        android:text="High Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintTop_toBottomOf="@+id/high_accessibility"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/legend_padding"
        />




</android.support.constraint.ConstraintLayout>